<div class="container"
  <div class="row">
    <div class="col-12">
      <%= render 'shared/error_messages', obj: @article %>

      <%= form_with(model: @article, class: "shadow p-3 mb-5 mt-5 bg-white rounded", local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control border-success shadow rounded" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label form-label" %>
        <div class="col-10">
        <%= f.text_area :description, rows: 10, class: "form-control border-success shadow rounded"  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :category, class: "col-2 col-form-label form-label" %>
        <div class="col-10">
          <%= f.collection_select(:category_ids, Category.all, :id, :name,
          { prompt: "Please select one or more categories (can be empty)" },
          { multiple: true, size: 5, class: "custom-select border-success shadow rounded" } ) %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-lg btn-custom-show" %>
      </div>

      <% end %>

      <div class="text-center mb-3">
        <%= link_to 'Return to articles listing', articles_path, class: "card-title-color" %>
      </div>
    </div>
  </div>
</div>
