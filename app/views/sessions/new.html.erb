<h1 class="text-center mt-4">Log in to Delta Blog </h1>

<div class="container"
  <div class="row">
    <div class="col-10">
      <%= form_with(scope: :session, class: "shadow p-3 mb-5 mt-5 bg-white rounded", local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label form-label" %>
        <div class="col-10">
        <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control border-success shadow rounded"  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label form-label" %>
        <div class="col-10">
        <%= f.password_field :password, placeholder: "Enter your password", class: "form-control border-success shadow rounded"  %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "Log in", class: "btn btn-lg btn-custom-show" %>
      </div>

      <% end %>

      <div class="text-center mb-3">
        <%= link_to 'Return to articles listing', articles_path, class: "card-title-color" %>
      </div>
    </div>
  </div>
</div>
