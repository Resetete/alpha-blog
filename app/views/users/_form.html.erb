<div class="container"
  <div class="row">
    <div class="col-12">
      <%= render 'shared/error_messages', obj: @user %>

      <%= form_with(model: @user, class: "shadow p-3 mb-5 mt-5 bg-white rounded", local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label form-label" %>
        <div class="col-10">
          <%= f.text_field :username, placeholder: "Enter a username", class: "form-control border-success shadow rounded" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label form-label" %>
        <div class="col-10">
        <%= f.email_field :email, placeholder: "Enter an email", class: "form-control border-success shadow rounded"  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label form-label" %>
        <div class="col-10">
        <%= f.password_field :password, placeholder: "Choose a password", class: "form-control border-success shadow rounded"  %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit(@user.new_record? ? "Sign up" :"Update account", class: "btn btn-lg btn-custom-show") %>
      </div>

      <% end %>

      <div class="text-center mb-3">
        <%= link_to 'Return to articles listing', articles_path, class: "card-title-color" %>
      </div>
    </div>
  </div>
</div>
