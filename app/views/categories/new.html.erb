<h1 class="text-center mt-4"> Create a category </h1>

<div class="container"
  <div class="row">
    <div class="col-12">
      <%= render 'shared/error_messages', obj: @category %>

      <%= form_with(model: @category, class: "shadow p-3 mb-5 mt-5 bg-white rounded", local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :name, "Category name", class: "col-2 col-form-label form-label" %>
        <div class="col-10">
          <%= f.text_field :name, placeholder: "Enter a category name", class: "form-control border-success shadow rounded" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-lg btn-custom-show" %>
      </div>

      <% end %>

      <div class="text-center mb-3">
        <%= link_to 'Return to articles listing', articles_path, class: "card-title-color" %>
      </div>
    </div>
  </div>
</div>
