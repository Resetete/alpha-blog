<h1 class="text-center mt-4"> Category:  <%= @category.name %> </h1>

<div class="text-center mt-4">
  <% if logged_in? && current_user.admin? %>
    <%= link_to "Edit category", edit_category_path(@category), class: "btn btn-custom-edit" %>
  <% end %>
</div>

<h3 class="text-center mt-4"> Articles </h3>

<div class="flickr_pagination mt-3">
    <%= will_paginate @category_articles, container: false %>
</div>

<%= render 'articles/article', obj: @category_articles %>

<div class="flickr_pagination mb-3">
    <%= will_paginate @category_articles, container: false %>
</div>
